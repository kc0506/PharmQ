#controls Grid {

    margin-top: 1;

    layout: grid;
    grid-size: 3 1;
    # border: solid green;
    height: auto;
}

#settings-container {
    # border: solid green;
    align: left middle;
}

#feedback-container {
    # border: solid green;
    align: center   middle;
}

.feedback {
    text-align: center;
    height: 1;
    align: center middle;
}

#next-container  {
    align: right middle;  /* Changed from content-align */
}
#next-container Button {
    margin: 0;
}

#next {
    width: 20;
    # margin-right: 0;
    # margin-right: 1;  /* Added margin-right */
}


/* Styles for category view */
#categories-tab {
    padding: 1;
}

#toc {
    margin-top: 0;
    layout: vertical;
    # height: 100%;
    # width: 20%;
    height: auto;
    border: solid green;
    margin-right: 2;
}


