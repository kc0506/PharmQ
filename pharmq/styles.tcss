#categories-tab DataTable {
    height: auto;
    margin: 1 0;
    border: solid green;
}

/* Support for multi-line cells */
#categories-tab DataTable .datatable--cell {
    height: auto;
    min-height: 1;
    padding: 0 1;
    content-align: left middle;
    text-align: left;
}

.category-header {
    background: $boost;
    color: $text;
    text-align: left;
    padding-left: 2;
    text-style: bold;
}
