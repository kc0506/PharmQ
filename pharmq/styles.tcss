Screen {
    align: center middle;
    height: 100%;
}


TabbedContent {
    height: 100%;
    width: 100%;
    padding: 0 1;
}

TabPane {
    align: center top;
    # height: 100%;
}

#quiz {
    width: 80%;
    # height: 100%;
    border: solid green;
    padding: 1 2;
}

#quiz-header {
    overflow-x: scroll;
}

#quiz-content {
    # height: 100%;
    layout: vertical;
}

#prompt {
    # width: 50%;
    text-align: center;
    padding: 1;
    background: $panel;
    # border-bottom: solid green;
    margin-bottom: 1;
}

#category {
    text-align: left;
    padding: 0 1;
    # margin-bottom: 1;
}

#quiz-content ScrollableContainer {
    height: 1fr;
}

.question-container {
    padding: 1;
}

#controls {
    # background: $panel;
    background: transparent;
    # border-top: solid green;
    height: auto;
    padding: 1;
}

#options {
    layout: grid;
    grid-size: 2;
    grid-gutter: 1 2;
    width: 100%;
    height: auto;
    # height: 8;
}

.option {
    width: 100%;
    height: 3;
    content-align: left middle;
    padding: 0 1;
}

.option--disabled {
    opacity: 0.7;
}

.option-sub{
    display: none;
}
.option:disabled .option-sub{
    display: block;
    height: 1;
    dock: right;
}

